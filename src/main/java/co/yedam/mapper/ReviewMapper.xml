<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.yedam.mapper.ReviewMapper">

  	 <select id="insertReview" resultType="co.yedam.vo.ReviewVO">
		SELECT 'RV_' || LPAD(NVL(MAX(TO_NUMBER(SUBSTR(review_id, 4))), 0) + 1, 3, '0') AS next_review_id
		FROM review
		WHERE pd_code = #{pdC}
   	 </select>
   	 
   	 <select id="reviewList" resultType="co.yedam.vo.ReviewVO">
   	 	SELECT *
   	 	FROM review
   	 </select>
   
</mapper>